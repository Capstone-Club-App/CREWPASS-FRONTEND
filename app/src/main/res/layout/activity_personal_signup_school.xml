<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUp.Personal.PersonalSignUpSchoolActivity">


    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/icon_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/txt_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="소속 학교 입력"
        android:textStyle="bold"
        android:textSize="24sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="114dp"/>

    <!--학년 입력-->
    <EditText
        android:id="@+id/edittext_grade"
        android:layout_width="283dp"
        android:layout_height="38dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/edit_text_box"
        android:layout_marginTop="440dp"/>

    <!--학교 입력-->
    <TextView
        android:id="@+id/edittext_school"
        android:layout_width="185dp"
        android:layout_height="38dp"
        android:background="@drawable/edit_text_box"
        app:layout_constraintStart_toStartOf="@id/edittext_grade"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="334dp"/>
    
    <!--학교 찾기-->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_find_school"
        android:layout_width="87dp"
        android:layout_height="38dp"
        android:text="학교 찾기"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:background="@drawable/round_square_light_blue"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="@id/edittext_grade"
        android:layout_marginTop="334dp"
        />

    <TextView
        android:id="@+id/txt_school"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="학교"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@id/edittext_school"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="300dp"/>

    <TextView
        android:id="@+id/txt_grade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="학년"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@id/edittext_school"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="405dp"/>

    

    <!--다음-->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_next"
        android:layout_width="284dp"
        android:layout_height="39dp"
        android:text="다음"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:background="@drawable/round_square_main_blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="60dp"/>



</androidx.constraintlayout.widget.ConstraintLayout>