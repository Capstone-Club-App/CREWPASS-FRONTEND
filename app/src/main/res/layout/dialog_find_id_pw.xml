<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="291dp"
    android:layout_height="161dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/round_square_light_blue">

    <TextView
        android:id="@+id/text_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="찾으시려는 계정 유형을\n선택해주세요"
        android:textAlignment="center"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="35dp"
        />
    
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_personal_dlg"
        android:layout_width="110dp"
        android:layout_height="26dp"
        android:background="@drawable/round_square_main_blue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_club_dlg"
        app:layout_constraintTop_toBottomOf="@id/text_login"
        android:layout_marginTop="20dp"
        android:text="일반"
        android:textColor="@color/black" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_club_dlg"
        android:layout_width="110dp"
        android:layout_height="26dp"
        android:background="@drawable/round_square_main_blue"
        app:layout_constraintStart_toEndOf="@id/btn_personal_dlg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_login"
        android:layout_marginTop="20dp"
        android:text="동아리"
        android:textColor="@color/black"/>

</androidx.constraintlayout.widget.ConstraintLayout>