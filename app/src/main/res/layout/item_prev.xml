<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/item_apply_curr_iv"
        android:layout_width="315dp"
        android:layout_height="68dp"
        android:background="@color/light_gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="15dp"/>

    <ImageView
        android:id="@+id/item_profile_img"
        android:layout_width="41dp"
        android:layout_height="41dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/round_image"
        app:layout_constraintBottom_toBottomOf="@id/item_apply_curr_iv"
        app:layout_constraintStart_toStartOf="@+id/item_apply_curr_iv"
        app:layout_constraintTop_toTopOf="@id/item_apply_curr_iv" />

    <TextView
        android:id="@+id/txt_club_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:text="성신한 집사들"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/item_profile_img"
        app:layout_constraintTop_toTopOf="@id/item_profile_img" />

    <TextView
        android:id="@+id/item_date_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="29dp"
        android:text="2023.03.30 16:00"
        android:textColor="#595959"
        android:textFontWeight="500"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/item_profile_img"
        app:layout_constraintStart_toStartOf="@id/txt_club_name"
        app:layout_constraintWidth_percent="0.5" />

</androidx.constraintlayout.widget.ConstraintLayout>