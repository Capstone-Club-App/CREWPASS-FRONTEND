<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="291dp"
    android:layout_height="130dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/round_square_light_blue">

    <TextView
        android:id="@+id/text_logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="로그아웃 하시겠습니까?"
        android:textAlignment="center"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="35dp"
        />
    
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_yes_dlg"
        android:layout_width="110dp"
        android:layout_height="26dp"
        android:background="@drawable/round_square_main_blue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_no_dlg"
        app:layout_constraintTop_toBottomOf="@id/text_logout"
        android:layout_marginTop="20dp"
        android:text="예"
        android:textColor="@color/black" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_no_dlg"
        android:layout_width="110dp"
        android:layout_height="26dp"
        android:background="@drawable/round_square_main_blue"
        app:layout_constraintStart_toEndOf="@id/btn_yes_dlg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_logout"
        android:layout_marginTop="20dp"
        android:text="아니오"
        android:textColor="@color/black"/>

</androidx.constraintlayout.widget.ConstraintLayout>